<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:padding="10dp" >

    <TextView
        android:id="@+id/item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:maxLines="2"
        android:singleLine="false"
        android:text="一本神奇的书籍一本神奇的书籍一本神奇的书籍一本神奇的书籍一本神奇的书籍"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/item_tv_name"
        android:layout_marginTop="5dp"
        android:text="大小：12M"
        android:textColor="#969696"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_tv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_tv_size"
        android:textColor="#999999"
        android:textSize="16sp"
        android:visibility="gone"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/item_tv_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_tv_name"
        android:layout_marginTop="5dp"
        android:text="下载"
        android:textColor="#909090"
        android:textSize="16sp" />

</RelativeLayout>