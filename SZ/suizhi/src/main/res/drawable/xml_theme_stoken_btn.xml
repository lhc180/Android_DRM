<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <stroke android:width="1.2dp" android:color="@color/title_bg_color" />

            <solid android:color="#12000000" />

            <corners android:radius="4dp" />
        </shape></item>
    <item android:state_selected="true"><shape>
            <solid android:color="#00000000" />

            <stroke android:width="1.1dp" android:color="@color/title_bg_color" />

            <corners android:radius="4dp" />
        </shape></item>
    <item android:state_selected="false"><shape>
            <solid android:color="#00000000" />

            <stroke android:width="1.1dp" android:color="@color/gray" />

            <corners android:radius="4dp" />
        </shape></item>
    <item><shape>
            <solid android:color="#00000000" />

            <stroke android:width="1.1dp" android:color="@color/title_bg_color" />

            <corners android:radius="4dp" />
        </shape></item>

</selector>