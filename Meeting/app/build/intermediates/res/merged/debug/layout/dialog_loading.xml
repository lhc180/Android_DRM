<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <cn.com.pyc.drm.widget.ProgressWheel
        android:id="@+id/loading_wheel"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerInParent="true"
        wheel:matProg_barColor="@color/title_bar_bg_color"
        wheel:matProg_barWidth="3dp"
        wheel:matProg_circleRadius="42dp"
        wheel:matProg_progressIndeterminate="true"
        wheel:matProg_rimColor="#304FBFE8"
        wheel:matProg_rimWidth="3dp" />

</RelativeLayout>