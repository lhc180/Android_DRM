<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_white_bg_selector"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/iv_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/mechanism_tick"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_mechanismname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_tick"
            android:lineSpacingExtra="2.0dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会.开会开会.开会.开会.开会.开会..开会.开会.开会.开会.开会."
            android:textColor="@color/black_bb"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_color" />

</LinearLayout>