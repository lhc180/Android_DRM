<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/title_bar_bg_color" >

    <cn.com.pyc.drm.widget.HighlightImageView
        android:id="@+id/back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_takeback_left" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/back"
        android:background="@drawable/title_line" />

    <TextView
        android:id="@+id/findall_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="所有备注"
        android:textColor="@color/select_save_notes_textcolor"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/findall_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:padding="3dp"
        android:layout_toLeftOf="@+id/back"
        android:text="所有备注"
        android:textColor="@color/select_save_notes_textcolor"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/save_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:padding="3dp"
        android:layout_toLeftOf="@+id/findall_notes"
        android:text="保存"
        android:textColor="@color/select_save_notes_textcolor"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>