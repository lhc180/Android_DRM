<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260.0dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:background="@color/title_bar_bg_color" >

        <TextView
            android:id="@+id/shuqian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="警告"
            android:textColor="@color/white"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/dialog_divider" />

    <TextView
        android:id="@+id/tv_deldlg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="74.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text="@string/xml_dialog_delete_info"
        android:textColor="#AA000000"
        android:textSize="16.0sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#C1C1C1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:layout_gravity="center_horizontal" >

        <Button
            android:id="@+id/dialog_delete_btn_positive"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/item_white_bg_selector"
            android:singleLine="true"
            android:text="@string/xml_dialog_delete_positive"
            android:textColor="#63B8FF"
            android:textSize="15.0dip" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="#C1C1C1" />

        <Button
            android:id="@+id/dialog_delete_btn_negative"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/item_white_bg_selector"
            android:singleLine="true"
            android:text="@string/xml_dialog_delete_negative"
            android:textColor="#63B8FF"
            android:textSize="15.0dip" />
    </LinearLayout>

</LinearLayout>