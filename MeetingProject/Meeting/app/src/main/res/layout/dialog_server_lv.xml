<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/sz_white_corner_bg"
              android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
    >
        <TextView
            android:id="@+id/tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="提示"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@drawable/line_gray" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_control"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
           >
        </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_add_mechanism"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加机构"
            android:textSize="17sp"
            android:textColor="@color/title_bar_bg_color"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/plus"
        />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_default_mechanism"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议云平台"
            android:textSize="17sp"
            android:textColor="@color/title_bar_bg_color"
            android:layout_centerInParent="true"
        />
    </RelativeLayout>
</LinearLayout>