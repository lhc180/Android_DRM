<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headrl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_bg_color" >

        <cn.com.pyc.drm.widget.HighlightImageView
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_takeback_left" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/back"
            android:visibility="gone"
            android:background="@drawable/title_line" />

        <TextView
            android:id="@+id/tv_teb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="关于绥知"
            android:textColor="@color/ivory"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sz_info_marginLeft"
        android:layout_marginTop="@dimen/sz_info_marginTop"
        android:text="@string/sz_info"
        android:textSize="@dimen/sz_text_size" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sz_info_marginLeft"
        android:text="@string/sz_copyright"
        android:textSize="@dimen/sz_text_size" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sz_info_marginLeft"
        android:text="@string/sz_address"
        android:textColor="#4FC1E9"
        android:textSize="@dimen/sz_text_size" />

</LinearLayout>